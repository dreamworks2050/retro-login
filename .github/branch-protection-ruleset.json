{
  "name": "Main Branch Protection",
  "target": "branch",
  "conditions": {
    "ref_name": {
      "include": ["~REF^main"]
    }
  },
  "rules": [
    {
      "type": "required_status_checks",
      "parameters": {
        "checks": [
          {
            "context": "CI",
            "integration_id": 15368
          }
        ]
      }
    },
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": true
      }
    },
    {
      "type": "restriction"
    }
  ],
  "enforcement": "active"
}
