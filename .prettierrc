{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 100,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": ["*.json", "*.yml", "*.yaml", "*.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": false
			}
		}
	]
}
