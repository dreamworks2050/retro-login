{
  "name": "syntatis/howdy",
  "description": "Build your next ambitious plugin for WordPressÂ®",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "plugin",
    "boilerplate"
  ],
  "authors": [
    {
      "name": "Thoriq Firdaus",
      "homepage": "https://github.com/tfirdaus"
    }
  ],
  "license": "GPL-3.0",
  "autoload": {
    "psr-4": {
      "Retrologin\\": "app/"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-stubs/wordpress-stubs": "^6.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "syntatis/codex-companion": "^0.4",
    "syntatis/coding-standard": "^2.0",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-cli/i18n-command": "^2.6",
    "yoast/phpunit-polyfills": "^1.1"
  },
  "suggest": {
    "filp/whoops": "Provide better error handling in the browser",
    "nunomaduro/collision": "Provide better error handling in the console",
    "symfony/var-dumper": "Provide better debugging output"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "build": [
      "codex scoper:init --yes --no-dev",
      "@make-pot"
    ],
    "format": "phpcbf",
    "lint": "phpcs",
    "make-pot": "wp i18n make-pot --exclude=vendor,dist . inc/languages/retrologin.pot",
    "phpstan": "phpstan analyse --memory-limit=512M",
    "scope": "codex scoper:init",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "verify": [
      "@lint"
    ],
    "zip": "@composer archive --format=zip"
  },
  "scripts-descriptions": {
    "build": "Build the plugin for production",
    "format": "Fix coding standards violations",
    "lint": "Check the codebase for coding standards violations",
    "make-pot": "Generate the POT file for translations",
    "phpstan": "Run PHPStan static analysis",
    "scope": "Scope dependencies namespace with a prefix",
    "test": "Run PHPUnit tests",
    "test:coverage": "Run PHPUnit tests with HTML coverage report",
    "verify": "Run all linters (PHP, JS, CSS)",
    "zip": "Create a zip file of the plugin for distribution"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "syntatis/codex-companion": true,
      "phpstan/extension-installer": true
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "archive": {
    "exclude": [
      "*.config.*",
      "*.dist",
      "*.neon",
      "*.inc.php",
      "*.lock",
      "*.map",
      "*.md",
      "*.xml*",
      "*.zip",
      ".*",
      "LICENSE",
      "composer.json",
      "dev.php",
      "node_modules",
      "package-lock.json",
      "package.json",
      "src",
      "tests",
      "vendor",
      "!dist/autoload/composer.json",
      "!dist/autoload/vendor"
    ]
  },
  "extra": {
    "codex": {
      "scoper": {
        "prefix": "Retrologin\\Vendor"
      }
    }
  }
}
